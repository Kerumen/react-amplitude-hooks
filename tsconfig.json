{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2015", "dom"]
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
